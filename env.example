# Example environment variables for local development
# Copy this to backend/.env (or root .env if your setup expects it) and fill values.

# JWT secret used to sign authentication tokens
JWT_SECRET=your_jwt_secret_here

# MongoDB connection string. In local dev you can use a local Mongo or point to Atlas.
MONGODB_URI=mongodb://localhost:27017/code_editor_dev

# Frontend origin allowed by CORS (comma-separated if multiple)
CLIENT_ORIGIN=http://localhost:3000

# Backend port
PORT=5050

# Redis URL (optional, used when configuring presence scaling)
REDIS_URL=redis://localhost:6379

# SMTP (optional) for invite emails / notifications
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=you@example.com
SMTP_PASS=supersecret

# Sentry DSN (optional)
SENTRY_DSN=

# Node environment
NODE_ENV=development
